{
  "version": 1,
  "projects": {
    "ng-add": {
      "root": "libs/ng-add",
      "sourceRoot": "libs/ng-add/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["libs/ng-add/**/*.ts"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "libs/ng-add/jest.config.js",
            "passWithNoTests": true
          }
        },
        "build": {
          "builder": "@nrwl/node:package",
          "options": {
            "outputPath": "dist/libs/ng-add",
            "tsConfig": "libs/ng-add/tsconfig.lib.json",
            "packageJson": "libs/ng-add/package.json",
            "main": "libs/ng-add/src/index.ts",
            "assets": [
              "libs/ng-add/*.md",
              {
                "input": "./libs/ng-add/src",
                "glob": "**/*.!(ts)",
                "output": "./src"
              },
              {
                "input": "./libs/ng-add",
                "glob": "collection.json",
                "output": "."
              },
              {
                "input": "./libs/ng-add",
                "glob": "builders.json",
                "output": "."
              }
            ]
          }
        }
      }
    },
    "ng-add-e2e": {
      "projectType": "application",
      "root": "apps/ng-add-e2e",
      "sourceRoot": "apps/ng-add-e2e/src",
      "architect": {
        "e2e": {
          "builder": "@nrwl/nx-plugin:e2e",
          "options": {
            "target": "ng-add:build",
            "npmPackageName": "@tailwind/ng-add",
            "pluginOutputPath": "dist/libs/ng-add",
            "jestConfig": "apps/ng-add-e2e/jest.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace",
    "analytics": false
  }
}
